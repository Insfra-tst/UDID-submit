<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Information Retrieved</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f7;
        }

        .container {
            background-color: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
        }

        h1 {
            color: #1d1d1f;
            font-size: 2rem;
            margin-bottom: 1rem;
            text-align: center;
        }

        .success-message {
            color: #34c759;
            text-align: center;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .success-icon {
            font-size: 1.5rem;
        }

        .device-info {
            background-color: #f5f5f7;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e5e5e7;
        }

        .info-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .label {
            font-weight: 500;
            color: #515154;
        }

        .value {
            font-family: monospace;
            background-color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            border: 1px solid #e5e5e7;
            position: relative;
            cursor: pointer;
        }

        .value:hover {
            background-color: #f8f8f8;
        }

        .copy-tooltip {
            position: absolute;
            background-color: #333;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            white-space: nowrap;
            display: none;
        }

        .value:hover .copy-tooltip {
            display: block;
        }

        .button-container {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1.5rem;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.2s;
        }

        .home-btn {
            background-color: #0071e3;
            color: white;
        }

        .home-btn:hover {
            background-color: #0077ed;
        }

        .copy-all-btn {
            background-color: #34c759;
            color: white;
        }

        .copy-all-btn:hover {
            background-color: #32b954;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Device Information Retrieved</h1>
        <p class="success-message">
            <span class="success-icon">âœ“</span>
            Successfully collected device information
        </p>
        
        <div class="device-info">
            <% for (const [key, value] of Object.entries(deviceInfo)) { %>
                <div class="info-item">
                    <span class="label"><%= key %></span>
                    <span class="value" onclick="copyToClipboard('<%= value %>', this)">
                        <%= value %>
                        <span class="copy-tooltip">Click to copy</span>
                    </span>
                </div>
            <% } %>
        </div>

        <div class="button-container">
            <a href="/" class="btn home-btn">Back to Home</a>
            <button onclick="copyAllInfo()" class="btn copy-all-btn">Copy All Info</button>
        </div>
    </div>

    <script>
        function copyToClipboard(text, element) {
            navigator.clipboard.writeText(text).then(() => {
                const tooltip = element.querySelector('.copy-tooltip');
                tooltip.textContent = 'Copied!';
                setTimeout(() => {
                    tooltip.textContent = 'Click to copy';
                }, 2000);
            });
        }

        function copyAllInfo() {
            const info = {};
            <% for (const [key, value] of Object.entries(deviceInfo)) { %>
                info['<%= key %>'] = '<%= value %>';
            <% } %>
            
            const text = Object.entries(info)
                .map(([key, value]) => `${key}: ${value}`)
                .join('\n');
            
            navigator.clipboard.writeText(text).then(() => {
                alert('All information copied to clipboard!');
            });
        }
    </script>
</body>
</html> 